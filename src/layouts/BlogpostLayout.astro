---
import Header from "../components/Header.astro";
import "@fontsource/tektur";
import "@fontsource/pacifico";
// import "../styles/global.css";
---

<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" href="../../public/favicon.ico" type="image/x-icon" />
    <title>Private Teacher</title>
  </head>
  <body>
    <div class="container">
      <Header />
    </div>
    <slot />
  </body>
</html>

<script>
  import { scrollScript } from "../utils/scroll-script";
  scrollScript();
</script>

<style>
  :root {
    --primary-color: #524fd5;
    --secondary-color: #f6ab00;
    --secondary-color-dark: #ff8911;

    --tertiary-1: #fc848b;
    --tertiary-2: #68bde2;
    --tertiary-3: #f7e17b;
    --tertiary-4: #a8d08d;
    --tertiary-5: #9c89b8;

    --white-light-1: #fbfbfb;
    --light-grey-1: #f5f5f5;
    --light-grey-2: #e9e7e7;

    --dark-grey: #9a9a9a;
    --dark-blue: #27374d;
    --light-blue: #526d82;
    --mid-blue: #3d1f91;
  }

  html {
    font-size: 62.5%;
    box-sizing: border-box;
    font-family: "Nunito Sans", sans-serif;
    scroll-behavior: smooth;

    @media (max-width: 900px) {
      font-size: 56.25%;
    }
  }

  .container {
    font-size: 1.4rem;
    padding: 0 10rem;

    @media (max-width: 900px) {
      padding: 0 5rem;
    }

    @media (max-width: 600px) {
      padding: 0 2rem;
    }
  }
</style>
