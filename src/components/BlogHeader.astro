---
import { Icon } from "astro-icon/components";
---

<div class="header">
  <h1 class="blog-heading">🎉 Добро пожаловть в мой блог!</h1>
  <div class="search">
    <input type="text" class="search-input" placeholder="Искать..." />
    <Icon name="search" class="search-icon" />
  </div>
</div>

<style>
  .header {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 5rem 0;
    background-image: url("../assets/blob-scene.svg");
    background-repeat: no-repeat;
    background-size: cover;

    & .blog-heading {
      font-size: 3rem;
      font-family: "Pacifico", cursive;
      margin-bottom: 4rem;
    }
  }

  .search {
    position: relative;
    width: 45rem;
    display: flex;
    justify-content: center;

    @media (max-width: 900px) {
      width: 40rem;
    }

    @media (max-width: 600px) {
      width: 35rem;
    }

    & .search-input {
      width: 100%;
      padding: 1rem 2rem 1rem 4rem;
      border: 2px solid var(--light-grey-2);
      border-radius: 0.5rem;
      font-size: 1.6rem;
      transition: all 0.2s;
      font-family: inherit;

      &:focus {
        outline: none;
        border-color: var(--tertiary-2);
      }
    }

    & .search-icon {
      position: absolute;
      left: 1rem;
      top: 1rem;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 2.5rem;
      color: var(--tertiary-1);
    }
  }
</style>
