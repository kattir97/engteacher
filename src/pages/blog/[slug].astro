---
import { getAllPosts } from "../../lib/consmic";
import { Image } from "astro:assets";
import "@fontsource/nunito-sans";
import "@fontsource/sofia-sans";

import BlogpostLayout from "../../layouts/BlogpostLayout.astro";

interface Post {
  slug: string;
  title: string;
  created_at: string;
  metadata: {
    image: {
      url: string;
      imgix_url: string;
    };
    excerpt: string;
    content: string;
    tags: {
      title: string;
    }[];
  };
}

export async function getStaticPaths() {
  const data = (await getAllPosts()) || [];
  console.log(data);

  return data.map((post: Post) => {
    return {
      params: { slug: post.slug },
      props: { post },
    };
  });
}

const { post }: { post: Post } = Astro.props;
---

<BlogpostLayout>
  <div class="blogpost">
    <h1 class="title">{post.title.toString()}</h1>
    <div class="img-box">
      <Image
        src={post.metadata.image.imgix_url}
        alt="post image"
        width={720}
        height={500}
        class="img"
      />
    </div>

    <div set:html={post.metadata.content} id="content" />
